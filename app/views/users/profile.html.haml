.row
  .col-xs-4.text-center
    = @user.thumb
  .col-xs-6
    %h3= @user.full_name
    Tel: #{@user.phone}
    .omniauth_providers
      - @user.social_links.each do |link|
        = link
    - if current_user.admin?
      = link_to(icon('user')+ ' Войти', login_as_users_path(@user), class: 'btn btn-info btn-xs')
