= render 'layouts/inspinia/empty/video'
.row.h-710
  .col-sm-6
    .text-center.animated.fadeInDown
      = render 'layouts/inspinia/empty/logo'
  .col-sm-6
    .middle-box.text-center.loginscreen.animated.fadeInDown
      %h2= t('.sign_up', default: 'Sign up')
      = simple_form_for(resource, as: :user,
                        url: registration_path(resource_name),
                        html: { autocomplete: 'off' } ) do |f|
        = f.error_notification
        .form-group
          = f.text_field :email,
                         placeholder: 'Email',
                         class: 'form-control',
                         autocomplete: 'off'
          = f.full_error :email
        .form-group
          = f.text_field :skype,
                         placeholder: 'Skype',
                         class: 'form-control',
                         autocomplete: 'off'
          = f.full_error :skype
        .form-group
          = f.text_field :phone,
                         placeholder: 'Телефон',
                         class: 'form-control',
                         autocomplete: 'off'
          = f.full_error :phone
        .form-group
          = f.text_field :password,
                         placeholder: 'Пароль',
                         class: 'form-control',
                         autocomplete: 'off'
          = f.full_error :password
        .form-group
          = f.text_field :password_confirmation,
                         placeholder: 'Повторите пароль',
                         class: 'form-control',
                         autocomplete: 'off'
          = f.full_error :password_confirmation
        .row
          .col-xs-3.col-xs-offset-3
            = f.button :submit, t('.sign_up', default: 'Sign up')
      = render 'devise/shared/links'
